<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
  version="4.0"
  metadata-complete="true">

  <display-name>Welcome to Tomcat</display-name>
  <description>
     Welcome to Tomcat
  </description>
  <servlet>
     <servlet-name>app001</servlet-name>
	 <servlet-class>controllers.LoginServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
	<servlet-name>app001</servlet-name>
	<url-pattern>/login.do</url-pattern>
  </servlet-mapping>

  <servlet>
     <servlet-name>app002</servlet-name>
	 <servlet-class>controllers.SaveDataServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
	<servlet-name>app002</servlet-name>
	<url-pattern>/save.do</url-pattern>
  </servlet-mapping>
<servlet>
     <servlet-name>app003</servlet-name>
	 <servlet-class>controllers.EncryptedRecords</servlet-class>
  </servlet>
  
  <servlet-mapping>
	<servlet-name>app003</servlet-name>
	<url-pattern>/show.do</url-pattern>
  </servlet-mapping>

  <servlet>
     <servlet-name>app004</servlet-name>
	 <servlet-class>controllers.LogoutServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
	<servlet-name>app004</servlet-name>
	<url-pattern>/logout.do</url-pattern>
  </servlet-mapping>

<servlet>
     <servlet-name>app005</servlet-name>
	 <servlet-class>controllers.DecryptServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
	<servlet-name>app005</servlet-name>
	<url-pattern>/decrypt.do</url-pattern>
  </servlet-mapping>

</web-app>


